{
  "name": "fixzone-backend",
  "version": "1.0.0",
  "description": "Fix Zone ERP Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "migrate:settings": "node run-settings-migrations.js",
    "backup:db": "node scripts/backup-database.js",
    "backup:full": "node scripts/create-full-backup.js",
    "backup:auto": "node scripts/schedule-auto-backup.js",
    "backup:test": "node scripts/test-auto-backup.js",
    "deploy:staging": "node scripts/deploy-settings-staging.js",
    "deploy:production": "node scripts/deploy-production.js",
    "seed:settings": "node scripts/seed-default-settings.js",
    "test:settings-api": "node scripts/test-settings-api.js",
    "test:settings": "jest --testPathPattern=settings",
    "test:settings:unit": "jest --testPathPattern=settings/.*Service.test.js",
    "test:settings:integration": "jest --testPathPattern=settings/integration.test.js",
    "test:settings:e2e": "jest --testPathPattern=settings/e2e.test.js",
    "test:settings:security": "jest --testPathPattern=settings/security.test.js",
    "test:settings:performance": "jest --testPathPattern=settings/performance.test.js",
    "seed:staging": "node scripts/seed-staging-data.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "joi": "^17.9.2",
    "jsbarcode": "^3.12.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "qrcode": "^1.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "iconv-lite": "^0.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
